generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model recolecciones {
  id             Int      @id @default(autoincrement())
  Canti_estimada Int      @default(0)
  Capacidad      Int      @default(0)
  Estado_residuo String   @default("")
  Tipo_residuo   String   @default("")
  Ubicacion      String   @default("")
  notificaciones notificaciones[] 
}

model notificaciones {
  id Int  @id @default(autoincrement())
  Mensaje String
  Fecha_Hora DateTime
  Tipo String
  recoleccion_id Int
  recoleccion recolecciones @relation(fields: [recoleccion_id], references: [id])
}